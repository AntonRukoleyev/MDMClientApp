<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDMClientApp.Views.TwoFactorAuthPage"
             Title="Подтверждение 2FA">
    <StackLayout Padding="20">
        <Label Text="Введите код из Google Authenticator" FontSize="Medium"/>
        <Entry Placeholder="Код подтверждения" x:Name="CodeEntry"/>
        <Button Text="Подтвердить" Clicked="OnVerifyClicked"/>
    </StackLayout>
</ContentPage>