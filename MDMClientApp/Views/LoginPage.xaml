<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDMClientApp.Views.LoginPage"
             Title="Вход">
    <StackLayout Padding="20">
        <Entry Placeholder="Имя" x:Name="FirstNameEntry"/>
        <Entry Placeholder="Пароль" x:Name="PasswordEntry" IsPassword="True"/>
        <Button Text="Войти" Clicked="OnLoginClicked"/>
        <Button Text="Зарегистрироваться" Clicked="OnRegisterClicked"/>
    </StackLayout>
</ContentPage>